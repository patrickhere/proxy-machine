# Proxy Machine - Environment Variables
# Copy this file to .env and customize for your setup

# =============================================================================
# WEB SERVER
# =============================================================================
WEB_HOST=0.0.0.0
WEB_PORT=5001

# =============================================================================
# LOGGING
# =============================================================================
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# PERFORMANCE
# =============================================================================
# Number of concurrent image downloads (increase for faster servers)
MAX_DOWNLOAD_WORKERS=8

# Default image quality in PPI (300-1200)
DEFAULT_PPI=600

# SQLite cache size in MB (more = faster queries)
DB_CACHE_SIZE_MB=200

# =============================================================================
# STORAGE PATHS (Docker/Unraid)
# =============================================================================
# For docker-compose: use these as defaults
# For Unraid: override in docker-compose.yml volumes section

# Shared card library path (host machine)
SHARED_ROOT=./data/shared

# User profiles path (host machine)
PROFILES_ROOT=./data/profiles

# Bulk data path (Scryfall database, 3GB+)
BULK_DATA_DIR=./data/bulk-data

# PDF output directory
PDF_OUTPUT_DIR=./data/pdfs

# Logs directory
LOGS_DIR=./data/logs

# Tailscale state directory
TAILSCALE_STATE=./data/tailscale

# =============================================================================
# TAILSCALE (Optional - Remote Access)
# =============================================================================
# Enable Tailscale VPN
TAILSCALE_ENABLED=false

# Tailscale auth key (get from https://login.tailscale.com/admin/settings/keys)
# Must start with tskey-auth-
TAILSCALE_AUTHKEY=

# Custom hostname in Tailscale network (optional)
TAILSCALE_HOSTNAME=proxy-machine

# =============================================================================
# UNRAID EXAMPLE
# =============================================================================
# For Unraid deployment, use absolute paths like:
# SHARED_ROOT=/mnt/user/appdata/proxy-machine/shared
# PROFILES_ROOT=/mnt/user/appdata/proxy-machine/profiles
# BULK_DATA_DIR=/mnt/user/appdata/proxy-machine/bulk-data
# PDF_OUTPUT_DIR=/mnt/user/appdata/proxy-machine/pdfs
# LOGS_DIR=/mnt/user/appdata/proxy-machine/logs
# TAILSCALE_STATE=/mnt/user/appdata/proxy-machine/tailscale
